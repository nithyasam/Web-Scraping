<style>
    body { background-color: #F2F6D0 }
    header{
      padding: 30px;
      width: 100%;
      background-color: #4aaaa5;
    }
    #wrapper {
      width: 960px;
      margin-left: auto;
      margin-right: auto;
      padding-top: 5%;
    }
    #articles {
      display: inline-block;
      overflow: auto;
      width: 60%;
      height: 700px;
    }
    #notes {
      float: right;
      width: 30%;
    }
    p {
      background-color: #ffffff;
      padding : 10px;
      border : 1px solid grey;
    }
    .savebtn{
      padding: 5px;
      margin : 5px;
      font-size: 14px;
      background-color:#4aaaa5;
    }
  </style>
<div id="wrapper">
<div id="articles">
	{{#each article}}
		<br>
		<p>
		{{this.title}}<br>
		{{this.link}}
		</p>
		<form action="/saveArticle/{{this._id}}" method="POST">
			<button class='savebtn' savebtn-id=" + {{this._id}} +">Save Article</button><br>			
		</form>
	{{/each}}
</div>
</div>